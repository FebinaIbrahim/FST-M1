<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="FSTTests" thread-count="4" parallel="classes"> <!-- Test Suite -->
<!-- 1) Run ALL TESTS -->
    <test name="All-Tests" enabled="true">
        <classes>
            <class name="testngactivities.Activity5"/>
        </classes>
    </test>

    <!-- 2) Run ONLY HeaderTests group -->
    <test name="Only-HeaderTests" enabled="false">
        <groups>
            <run>
                <include name="HeaderTests"/>
            </run>
        </groups>
        <classes>
            <class name="testngactivities.Activity5"/>
        </classes>
    </test>

    <!-- 3) Run ONLY ButtonTests group -->
    <test name="Only-ButtonTests" enabled="false">
        <groups>
            <run>
                <include name="ButtonTests"/>
            </run>
        </groups>
        <classes>
            <class name="testngactivities.Activity5"/>
        </classes>
    </test>

    <!-- 4) EXCLUDE HeaderTests group -->
    <test name="Exclude-HeaderTests" enabled="false">
        <groups>
            <run>
                <exclude name="HeaderTests"/>
            </run>
        </groups>
        <classes>
            <class name="testngactivities.Activity5"/>
        </classes>
    </test>
</suite>